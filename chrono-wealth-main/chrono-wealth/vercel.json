{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      // Catch-all rewrite so that client-side routes like `/pricing` or `/dashboard`
      // are served by the SPA and not handled by the file system. Without this,
      // Vercel will return a 404 for any non-root path.
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}